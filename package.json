{
  "name": "logistack-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Logistack - Modern Transportation Management System",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/**\" dev",
    "build": "pnpm --filter \"./packages/**\" build && pnpm --filter \"./apps/**\" build",
    "type-check": "pnpm --recursive run type-check",
    "lint": "pnpm --recursive run lint",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next .turbo",
    "db:generate": "pnpm --filter @logistack/db generate",
    "db:migrate": "pnpm --filter @logistack/db migrate",
    "db:studio": "pnpm --filter @logistack/db studio",
    "web:dev": "pnpm --filter @logistack/web dev",
    "api:dev": "pnpm --filter @logistack/api dev",
    "client:dev": "pnpm --filter @logistack/client dev",
    "server:dev": "pnpm --filter @logistack/server dev",
    "dev:all": "pnpm --parallel --filter @logistack/client --filter @logistack/server dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "tms",
    "transportation",
    "logistics",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.10",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.4.3"
    }
  }
}
